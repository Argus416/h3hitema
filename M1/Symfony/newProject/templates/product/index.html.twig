{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tous les produits</h1>

    <div class="row">
    {% for product in products %}
    <div class="card col-6">
        <img src="{{product.image}}" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title d-flex justify-content-between">
            <span>
                {{product.name}}
            </span>
            <span>
                {{product.price}}€
            </span>
             </h5>
            <p class="card-text">{{product.description}}€</p>
            <a href="{{url('app_one_product', {slug: product.slug })}}" class="btn btn-primary">Voir le produit</a>
        </div>
    </div>
    {% endfor %}


    {% for page in 0..nbPages %}
    {% set active = '' %}
    {% if(page == currentPage) %}
        {% set active = 'active' %}
    {% endif %}
    <a href="{{ url('app_product', {page:page }) }}" class="{{active}}">{{page + 1}}</a>
    {% endfor %}

    </div>

</div>
{% endblock %}
