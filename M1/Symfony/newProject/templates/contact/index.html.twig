{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-4">
    <h1>Nous contacter</h1>
    
    {% if formIsSubmited  %}
        <div class="alert alert-danger">
            {% for item in app.flashes('error') %}
                <span>{{ item }}</span>
            {% endfor %}
        </div>
    {% endif  %}

    {{ form_start(form, {attr : {novalidate: 'novalidate', action : '/contact'}}) }}
        <div class="mb-3">
            {{form_label(form.email, "Email: ")}}        
            {{form_widget(form.email)}}        
            {{form_errors(form.email)}}        
        </div>

        <div class="mb-3"
            {{form_label(form.subject, "Subjet: ")}}        
            {{form_widget(form.subject)}}        
            {{form_errors(form.subject)}}        
        </div>

        <div class="mb-3"
            {{form_label(form.message, "Message: ")}}        
            {{form_widget(form.message)}}        
            {{form_errors(form.message)}}        
        </div>
        <input class="btn btn-success mt-2" type="submit" value="Envoyer" />
    {{ form_end(form) }}
   
</div>
{% endblock %}
